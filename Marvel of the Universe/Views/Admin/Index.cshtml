@model IEnumerable<Marvel_of_the_Universe.Models.Heroe>

@{
    ViewBag.Title = "Panel";
}

<p>
    @Html.ActionLink("Create heroe", "CreateHeroe","Admin")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Actor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Skills)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Actor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Skills)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Image)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditHeroe", "Admin",new { id = item.Id }, null) |
            @Html.ActionLink("Delete", "DeleteHeroe", "Admin", new { id = item.Id }, null)
        </td>
    </tr>
}

</table>
